{
  "info": {
    "name": "BookSwap",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Signup (Alice)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": "{{base_url}}/auth/signup",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Alice Reader\",\n  \"email\": \"alice@example.com\",\n  \"password\": \"Passw0rd!\"\n}"
            }
          }
        },
        {
          "name": "Login (Alice)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": "{{base_url}}/auth/login",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"alice@example.com\",\n  \"password\": \"Passw0rd!\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const json = pm.response.json();",
                  "pm.environment.set('token', json.token);"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Me",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": "{{base_url}}/users/me"
          }
        }
      ]
    },
    {
      "name": "Books",
      "item": [
        {
          "name": "Create Book",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": "{{base_url}}/books",
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "title", "value": "Clean Code", "type": "text" },
                { "key": "author", "value": "Robert C. Martin", "type": "text" },
                { "key": "condition", "value": "good", "type": "text" },
                { "key": "image", "type": "file", "src": [] }
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const json = pm.response.json();",
                  "if (json && json.id) pm.environment.set('book_id', json.id);"
                ]
              }
            }
          ]
        },
        { "name": "List Books", "request": { "method": "GET", "url": "{{base_url}}/books" } },
        {
          "name": "List My Books",
          "request": {
            "method": "GET",
            "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ],
            "url": "{{base_url}}/books/mine"
          }
        }
      ]
    },
    {
      "name": "Requests",
      "item": [
        {
          "name": "Create Request (Bob)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": "{{base_url}}/requests",
            "body": { "mode": "raw", "raw": "{\n  \"bookId\": \"{{book_id}}\"\n}" }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const json = pm.response.json();",
                  "if (json && json.id) pm.environment.set('request_id', json.id);"
                ]
              }
            }
          ]
        },
        {
          "name": "List My Requests",
          "request": {
            "method": "GET",
            "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ],
            "url": "{{base_url}}/requests/mine"
          }
        },
        {
          "name": "Update Request Status (Owner)",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": "{{base_url}}/requests/{{request_id}}/status",
            "body": { "mode": "raw", "raw": "{\n  \"status\": \"accepted\"\n}" }
          }
        }
      ]
    }
  ]
}


